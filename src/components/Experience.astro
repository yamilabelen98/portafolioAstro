---
import ExperienceItem from "./ExperienceItem.astro"

const EXPERIENCE = [
  {
    date: "2024",
    title: "Desarrollo de Aplicación Mobile y Página Web",
    company: "Autónomo",
    description:
      "Desarrollo de un e-commerce con generación automática de archivos PDF de productos para facilitar la difusión. Implementación de una aplicación móvil y plataforma web optimizada.",
    techs: ["React", "React Native", "Node.js", "Express", "Firebase"],
  },
  {
    date: "Enero 2024 - Abril 2024",
    title: "Freelance Front-End Developer",
    company: "Mercado de Negocios",
    description:
      "Lideré la implementación de mejoras en la plataforma web, optimizando componentes reutilizables y logrando una mejora del 30% en la entrega de software mediante integración continua.",
    link: "https://mercadodenegocios.la/",
    techs: ["JavaScript", "React", "TailwindCSS", "Next.js", "CI/CD"],
  },
]
---

<ol class="relative mt-16 space-y-6">
  {EXPERIENCE.map((experience, index) => (
    <li>
      <ExperienceItem {...experience} />

      <!-- Tecnologías utilizadas -->
      {experience.techs && (
        <div class="mt-3 flex flex-wrap gap-2">
          {experience.techs.map((tech) => (
            <span 
              class="px-3 py-1 text-xs font-semibold bg-pink dark:bg-gray-800 border border-[#ed6195] dark:border-gray-600 
                     rounded-full transition-all duration-300 hover:shadow-md hover:bg-[#ed6195] hover:border-[#ed6195] dark:hover:bg-[#eb00bc] 
                     cursor-pointer">
              {tech}
            </span>
          ))}
        </div>
      )}
    </li>
  ))}
</ol>